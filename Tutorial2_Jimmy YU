end = 10
step = 3

t = range(start, end, step)

k = [0] * len(t)

for i in range(len(t)): #you can not use range() function
    k[i] = t[i]

print('{}'.format(k))
'''

start, end, step = map(int, input('Please enter:').split())

list = []
while start < end:
    list.append(start)
    start += step

print(f'list is {list}')

